<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/frameContainer">


    <!--Alert BOX UI-->
     <RelativeLayout
       android:id="@+id/relativeContainer"
    android:background="@android:color/transparent"
     android:layout_margin="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--android:gravity="center"-->
    <!--android:layout_gravity="center"-->
    <RelativeLayout

        android:layout_marginTop="30dp"
        android:background="@drawable/custom_ripple_bg_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="40dp"
                android:id="@+id/txtCustomTitle"
                android:gravity="center"
                android:textColor="#000000"
                android:text="Custom Title"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtCustomDesc"
            android:layout_below="@+id/txtCustomTitle"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Add a custom icon and color for\n your  own type  of alert!"            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_margin="10dp"
            android:background="#303F9F"
            android:textColor="#ffffff"
            android:text="OK"
            android:id="@+id/btnOk"
            android:layout_below="@+id/txtCustomDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView

        android:id="@+id/ivIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
      android:layout_centerHorizontal="true"/>


</RelativeLayout>




</FrameLayout>
